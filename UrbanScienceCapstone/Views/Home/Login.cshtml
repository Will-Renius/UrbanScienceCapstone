@{
    ViewData["Title"] = "Login";
}

<h2>
    Login
</h2>

<p>
    Please enter in you're user name and password...
</p>


<form action="~/home/verifylogin" method="post" name="LoginForm">
    Dealer Id:<br />
    <input type ="text" name="dealerid" /><br />
    Password:<br />
    <input type ="password" name="password"/><br />
    <input type="submit" />
</form>

<script type="text/javascript">
    $("#LoginForm").submit(function () {
        var jqxhr = $.post('/home/verifylogin', $('#LoginForm').serialize())
            .success(function () {
                var loc = jqxhr.getResponseHeader('Location');
                var a = $('<a/>', { href: loc, text: loc });
                $('#message').html(a);
            })
            .error(function () {
                $('#message').html("Error posting the update.");
            });
        return false;
    });
</script>
